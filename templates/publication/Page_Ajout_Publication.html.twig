    <style type="text/css">
    
    body
    {
      width: 100%;
      height: 100vh;
      background :#FAEBD7;
     }
    
    .center
    {
      width: 50%;
	  height: 10%;
      margin-right: auto;
      margin-left: auto;
      background:#FFFFFF;
      
      min-height: 700px;
	 
      padding : 50 px 50px ;
    }

    </style>



</head>

<body>
    
      
            <div class="row">

                <div  style="display: flex;align-items: center;justify-content: center;margin-top: 100px; padding: 10px;">

             <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Add Post</h1>
                     
                    <!-- General Form Elements -->
                    {{ form_start(form_Pub,{attr:{novalidate:'novalidate'}}) }}
                        <label for="inputText" class="col-sm-4 col-form-label">Titre</label>
                        <div class="col-sm-10">
                            {{ form_widget(form_Pub.titre,{'attr':{'class':'form-control'}}) }}

                        </div>
                    {{ form_errors(form_Pub.titre,{'attr':{'class':'text-danger'}}) }}


                    <br/>

                    <label for="inputText" class="col-sm-4 col-form-label">Description</label>
                        <div class="col-sm-10">
                            {{ form_widget(form_Pub.description,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(form_Pub.description,{'attr':{'class':'text-danger'}}) }}
                    <br/>
                   

                   <label for="inputText" class="col-sm-4 col-form-label">Photo</label>
                        <div class="col-sm-10">
                            {{ form_widget(form_Pub.imagePublication,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(form_Pub.imagePublication,{'attr':{'class':'text-danger'}}) }}
                    <br/>
					<br/>

                   <div class="d-grid gap-2 col-8 mx-auto">

                        {{ form_widget(form_Pub.Ajouter,{'attr':{'class':'btn btn-secondary'}}) }}
                    </div>


                    {{ form_end(form_Pub) }}

                </div>
            </div>


    </div>


        

</div>



