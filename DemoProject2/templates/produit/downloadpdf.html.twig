</head>

<body>
        <!-- Spinner Start -->


            <div class="content">

                <!-- Sale & Revenue Start -->
            
                           <div class="card">
			<div class="card-header">
				<strong class="card-title">Table de Produit</strong>
			</div>
            	<div class="card-body">
                          <table class="table  table-hover table-bordered">
                                <thead>
                                    <tr>
                                    <th scope="col">REFERENCE</th>
                                       

                                        <th scope="col">Nom</th>
                                       
                                        <th scope="col">TYPE</th>
                                        
                                        <th scope="col"> DATE Ajout</th>
                                        
                                        <th scope="col"> PRIX</th>
                                        
                                        <th scope="col">Description</th>
                                     
                                        <th scope="col">CATEGORIE</th>
                                        
                                        <th scope="col">Quantite</th>
                                        
                                        <th scope="col">QuantiteR</th>
                                       
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for compteur in list %}

                                    <tr>
                                    <td>{{compteur.id}} </td>
                                   
                                    <td> {{compteur.NOM}} </td>
                                    
                                    <td> {{compteur.TYPE}} </td>
                                    
                                    <td> {{compteur.DATEP | date('d-m-Y') }}</td>
                                    
                                    <td> {{compteur.PRIX}} </td>
                                    
                                    <td> {{compteur.DESCP}} </td>
                                    
                                    <td> {{compteur.Categorie.NOM}} </td>
                                    
                                    <td>{{compteur.quantite}} </td>
                                   
                                    <td>{{compteur.quantiteR}} </td>
                                   
                                        
                                    
                                    </tr>
                                   
                                </tbody>
                                 {% endfor %}
                            </table>
                
                <!-- Footer End -->
            </div>
        <!-- Content End -->
        </div>


