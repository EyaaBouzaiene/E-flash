	<!-- End header -->
	
	<!-- Start All Pages -->
	<div class="all-page-title page-breadcrumb">
		<div class="container text-center">
			<div class="row">
				<div class="col-lg-12">
					<h1>Reservation</h1>
				</div>
			</div>
		</div>
	</div>
	<!-- End All Pages -->
	<!-- Start Reservation -->
	<div class="reservation-box">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="heading-title text-center">
						<h2>Reservation</h2>
						<p>Tank u for your reservation</p>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12 col-sm-12 col-xs-12">
					<div class="contact-block">
						 {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
							<div class="row">
								<div class="col-md-6">
									<h3>email</h3>
								
								<div class="col-md-12">
										<div class="form-group">
										{{form_widget(form.gmail ,{'attr':{class: 'form-control'}})}}
										{{form_errors(form.gmail ,{'attr':{class: 'text-danger'}})}}
											<div class="help-block with-errors"></div>
										</div> 
									</div>
								</div>
								<div class="col-md-6">
									<h3>nombre place</h3>
								
									<div class="col-md-12">
										<div class="form-group">
											{{form_widget(form.nombreBillet ,{'attr':{class: 'form-control'}})}}
											{{form_errors(form.nombreBillet ,{'attr':{class: 'text-danger'}})}}
											<div class="help-block with-errors"></div>
										</div> 
									</div>
									<div class="col-md-12">
									<h3> evenement</h3>
									<div class="col-md-12" >
										<div class="form-group">
											{{form_widget(form.idEvent ,{'attr':{class: 'form-control'}})}}
										
											<div class="help-block with-errors"></div></div>
										</div> 
									</div>
								
								</div>
								
								
								<div class="col-md-12">
									<div class="submit-button text-center">
										<button class="btn btn-common"  type="submit" >Book Table</button>
									
										<div class="h3 text-center hidden"></div> 
										<div class="clearfix"></div> 

											{{form_end(form) }} 
                            

									</div>
								</div>
							</div>            
						  
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- End Reservation -->
	


