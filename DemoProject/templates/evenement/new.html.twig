{% extends 'base.html.twig' %}


{% block content %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin
    ="anonymous">
<div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">Ajouter un evenement</h6>
                           
                          {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                                <div class="mb-3">
                                    <label  class="form-label">NOM</label>
                                    {{form_widget(form.nom ,{'attr':{class: 'form-control'}})}}

                                    
                                      {{form_errors(form.nom ,{'attr':{class: 'text-danger'}})}}
                                </div>

                                <div class="mb-3">
                                    <label  class="form-label">description</label>
                                    {{form_widget(form.description ,{'attr':{class: 'form-control'}})}}
                                    
                                </div>
                                 {{form_errors(form.description ,{'attr':{class: 'text-danger'}})}}
                                   <div class="mb-3">
                                    <label  class="form-label">nombre de place</label>
                                    {{form_widget(form.nombrePlace ,{'attr':{class: 'form-control'}})}}
                                     {{form_errors(form.nombrePlace ,{'attr':{class: 'text-danger'}})}}
                                </div>
  <div class="mb-3">
                                    <label  class="form-label">dur√©e</label>
                                    {{form_widget(form.duree ,{'attr':{class: 'form-control'}})}}
                                      {{form_errors(form.duree ,{'attr':{class: 'text-danger'}})}}
                                    
                                </div>
                                <div class="mb-3">
                                    <label for="Date" class="form-label">Date debut </label>
                                {{form_widget(form.dateDebut ,{'attr':{class: 'form-control'}})}}

                                </div>

                        <div class="mb-3">

                                <div class="mb-3">
                                    <label for="Date" class="form-label">Date Fin </label>
                                {{form_widget(form.end ,{'attr':{class: 'form-control'}})}}

                               
                                <div class="input-group date" data-provide="datepicker">

    
    <div class="input-group-addon">
        <span class="glyphicon glyphicon-th"></span>
    </div>
</div>


                                

                               

                                

                             

                           
  <div class="mb-3">
                                    <label for="formFile" class="form-label">IMAGE</label>
                                    {{form_widget(form.image2 ,{'attr':{ type: 'file', class: 'form-control'}})}}
                                </div>

                                    <label  class="form-label">longitude</label>
                                    {{form_widget(form.lon,{'attr':{class: 'form-control'}})}}
                                    {{form_errors(form.lon,{'attr':{class: 'text-danger'}})}}
                                </div>

                            <div class="mb-3">
                                <label  class="form-label">lat</label>
                                {{form_widget(form.lat ,{'attr':{class: 'form-control'}})}}
                                {{form_errors(form.lat ,{'attr':{class: 'text-danger'}})}}
                            </div>

                        <div class="mb-3">
                            <label  class="form-label">lieu</label>
                            {{form_widget(form.lieu ,{'attr':{class: 'form-control'}})}}
                            {{form_errors(form.lieu ,{'attr':{class: 'text-danger'}})}}
                        </div>

                                <br>
                                <button type="submit" class="btn btn-primary">Ajouter</button>
                            {{form_end(form) }}
                        </div>
                    </div>
                    
                    
                    
                    
                </div>
            </div>


{% endblock %}
