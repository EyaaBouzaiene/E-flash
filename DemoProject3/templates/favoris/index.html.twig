<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Marvel Slider by Juan Ioo</title>
    <link rel="stylesheet" href="{{asset ('front/css/reset.css')}}">
    <link rel="stylesheet" href="{{asset ('front/css/styles.css')}}">
    <link rel="stylesheet" href="{{asset ('front/css/component.css')}}">



    <link rel="stylesheet" href="{{asset ('front/css/lightslider.css')}}" type="text/css">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <!--JQUERY-->
    <script type="text/javascript" src="{{asset ('front/js/JQuery3.3.1.js')}}"></script>
    <script type="text/javascript" src="{{asset ('front/js/lightslider.js')}}"></script>
    <script src="{{asset ('front/js/modernizr.custom.js')}}"></script>
    
</head>

<body>
   

  
    <script src="{{asset ('front/js/classie.js')}}"></script>


    <div class="view">

        <section class="grid">

            <div class="container">


                <!---SLIDER-->
                <ul id="autoWidth" class="cs-hidden">
                 {% if app.session.get('panier') %}
{% for  element in dataPanier.products %}

                    <li class="item-a">
                        <!--SLIDER BOX-->

                        <div class="box">


                            <div class="product">

                                <div class="product__info">

                                    <div class="imgbx">
                                        <img class="product__image" src="{{ asset('uploads/' ~ element.product.image2) }}">
                                    </div>

                                    <img class="product__image" />
                                </div>

                                

                            </div>
                            <div class="content">

                                <button class="btn btn--left" onclick="window.location.href='{{ path('add', {'id': element.product.reference})}}'">buy it</button>
                                 
                                <button class="btn btn--right" onclick="window.location.href='{{ path('deletef', {'id': element.product.reference})}}'">delete </button>

                            </div>


                        </div>

                    </li>
 {% endfor %} 
       
            {% else %}

            
                <tr>
                    <td colspan="5" class="text-center">Votre panier est vide</td>
                </tr>
          {% endif %}
                </ul>

            </div>
        </section>
    </div>

    
    <script src="{{asset ('front/js/classie.js')}}"></script>
    <script src="{{asset ('front/js/az.js')}}"></script>
    <script src="{{asset ('front/js/main.js')}}"></script>



</body>

</html>