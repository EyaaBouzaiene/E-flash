       
{% extends 'base.html.twig' %}


{% block content %}
<div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">Modifier Livraison</h6>
                           
                            {{form_start(form)}} 
                                <div class="mb-3">
                                    <label  class="form-label">Commande</label>
                                    {{form_widget(form.idcommande ,{'attr':{class: 'form-control'}})}}
                                    
                                </div>

                                <div class="mb-3">
                                    <label  class="form-label">Livreur</label>
                                    {{form_widget(form.idl ,{'attr':{class: 'form-control'}})}}
                                    
                                </div>

                                <div class="mb-3">
                                    <label for="Date" class="form-label">Ville </label>
                                {{form_widget(form.ville ,{'attr':{class: 'form-control'}})}}

                                </div>

                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Etat</label>
                                    {{form_widget(form.etat ,{'attr':{class: 'form-control'}})}}
                                </div>

                                

                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Prix</label>
                                    {{form_widget(form.prix ,{'attr':{class: 'form-control'}})}}
                                    
                                </div>

                                
                              

                                

                                

                                
                                
                                <br>
                                <button type="submit" class="btn btn-primary">Ajouter</button>
                            {{form_end(form) }} 
                        </div>
                    </div>
                    
                    
                    
                    
                </div>
            </div>


{% endblock %}
