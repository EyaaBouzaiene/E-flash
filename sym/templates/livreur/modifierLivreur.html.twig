{% extends 'base.html.twig' %}


{% block content %}
<div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">Modifier Livreur</h6>
                           
                            {{form_start(form)}} 
                                <div class="mb-3">
                                    <label  class="form-label">NOM</label>
                                    {{form_widget(form.nomlivreur ,{'attr':{class: 'form-control'}})}}
                                    {{form_errors(form.nomlivreur)}}
                                    
                                </div>

                                <div class="mb-3">
                                    <label  class="form-label">Prenom</label>
                                    {{form_widget(form.prenomlivreur ,{'attr':{class: 'form-control'}})}}
                                     {{form_errors(form.prenomlivreur)}}
                                </div>

                                <div class="mb-3">
                                    <label for="Date" class="form-label">Email </label>
                                {{form_widget(form.email ,{'attr':{class: 'form-control'}})}}
                                 {{form_errors(form.email)}}
                                </div>

                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Password</label>
                                  
                                    {{form_widget(form.password ,{'attr':{class: 'form-control'}})}}
                                     {{form_errors(form.password)}}
                                </div>

                                

                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Telephone</label>
                                    {{form_widget(form.telf ,{'attr':{class: 'form-control'}})}}
                                     {{form_errors(form.telf)}}
                                </div>
                                 <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Photo</label>
                                    {{form_widget(form.image ,{'attr':{class: 'form-control'}})}}
                                     
                                </div>

                                
                              

                                

                                

                                
                                
                                <br>
                                <button type="submit" class="btn btn-primary">Ajouter</button>
                            {{form_end(form) }} 
                        </div>
                    </div>
                    
                    
                    
                    
                </div>
            </div>


{% endblock %}
