{% extends 'basefront.html.twig' %}


{% block content %}

<link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">

<script src="https://kit.fontawesome.com/a1dbc6be4d.js" crossorigin="anonymous"></script>



 
    <!-- Include Flashy default partial -->
    



<style type="text/css">


.fa-solid {
 color : #FDD835;
 font-size: 21px;
 width: 25px;
 height: 11px;
}




    </style>
<div class="all-page-title page-breadcrumb">
<div class="container text-center">
<div class="row">
<div class="col-lg-12">
<h1>Deliver</h1>
</div>
</div>
</div>
</div>
<!-- Start Customer Reviews -->
  <div class="customer-reviews-box">
    <div class="container">

      <div class="row">
        <div class="col-lg-12">
           {% for message in app.flashes('primary') %}
            <div class="alert alert-primary">
                {{ message }}
            </div>
        {% endfor %}
        </div>
      </div>
    <div class="row">
       
     <div class="col-md-8 mr-auto ml-auto text-center">
        
        <div id="reviews" class="carousel slide" data-ride="carousel">
            
            <div class="carousel-inner mt-4">
            <div class="carousel-item text-center active">
								<div class="img-box p-1 border rounded-circle m-auto">
									<img class="d-block w-100 rounded-circle" src="{{asset('logo/logo.png') }}" alt="">
								</div>
								<h5 class="mt-4 mb-0"><strong class="text-warning text-uppercase">Palais des Milles Saveurs</strong></h5>
								<h6 class="text-dark m-0">This is our deliver list please rate them to know your opinion </h6>
								<p class="m-0 pt-3"></p>
			</div>
                {% for l in livreur %}
              <div class="carousel-item text-center ">
             
                <div >
                  <td><img src="{{asset('uploads/'~ l.image) }}" alt=""  class="img-box p-1 border rounded-circle m-auto"></td>
                </div>
                <h5 class="mt-4 mb-0"><strong class="text-warning text-uppercase">{{l.nomLivreur}} {{l.prenomLivreur}}</strong></h5>
                <h5 class="text-dark m-0">{{l.email}}</h5>
                <h5 class="text-dark m-0">{{l.telf}}</h5>
                <p class="m-0 pt-3"></p>
              </div>
              {% endfor %}
        </div>
         
         <div>
         
            <a class="carousel-control-prev" href="#reviews" role="button" data-slide="prev">
              <i class="fa fa-angle-left" aria-hidden="true"></i>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#reviews" role="button" data-slide="next">
              <i class="fa fa-angle-right" aria-hidden="true"></i>
              <span class="sr-only">Next</span>
            </a>
         </div>
        
        
        </div>
      </div>
       
    </div>
   
  </div>
 
  <!-- End Customer Reviews -->

<div class="container-fluid pt-30 px-10">
                <div >
                    <div >
                        <div class="bg-dark rounded h-100 p-4">
                        <tr> </tr>
                           
                            {{form_start(formL,{'attr':{novalidate: 'form-control'}})}} 
                                <div class="mb-3">
                                    <label  class="form-label">Email</label>
                                    {{form_widget(formL.idlivreur ,{'attr':{class: 'form-control'}})}}
                                    
                                    
                                </div>

                                <div class="mb-3">
                                    <label  class="form-label">Rate</label>
                                    
                                    {{form_widget(formL.rate ["0"],{'attr':{class: 'fa-solid fa-star', name:"rating"}} )}}
                                     {{form_widget(formL.rate ["1"],{'attr':{class: 'fa-solid fa-star', name:"rating"}} )}}  
                                     {{form_widget(formL.rate ["2"],{'attr':{class: 'fa-solid fa-star', name:"rating"}} )}}
                                     {{form_widget(formL.rate ["3"],{'attr':{class: 'fa-solid fa-star', name:"rating"}} )}}


                                


                                
                              

                                

                                

                                
                                
                                <br>
                                <div class="col-lg-12">
                                <button type="submit"  class=" btn btn-secondary">rate</button>
                             </div>
                            {{form_end(formL) }} 
                        </div>
                    </div>
                    
                    
                    
                    
                </div>
            </div>


{% endblock %}
