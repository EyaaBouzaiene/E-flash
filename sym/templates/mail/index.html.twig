{% for message in app.flashes('primary') %}
            <div class="alert alert-primary">
                {{ message }}
            </div>
        {% endfor %}
<div class="container-fluid pt-30 px-10">
                <div >
                    <div class="col-sm-12 ">
                        <div class="bg-dark rounded h-100 p-4">
                        <tr> </tr>
                            <div class="card-header">
									
									</div>
                            {{form_start(mail,{'attr':{novalidate: 'form-control'}})}} 
                                <div class="mb-3">
                                    <label  class="form-label">Name</label>
                                    {{form_widget(mail.name ,{'attr':{class: 'form-control'}})}}
                                    
                                    
                                </div>

                                <div class="mb-3">
                                    <label  class="form-label">Email</label>
                                    {{form_widget(mail.mail ,{'attr':{class: 'form-control'}})}}
                                     
                                </div>
                                 <div class="mb-3">
                                    <label  class="form-label">Message</label>
                                    {{form_widget(mail.message ,{'attr':{class: 'form-control'}})}}
                                     
                                </div>


                                
                                <br>
                                
                            {{form_end(mail) }} 
                        </div>
                    </div>
                    
                    
                    
                    
                </div>
            </div>
{% endblock %}